mylist = ['apple', 'banana', 'monkey', 'love']
def in_my_list(sentence):
    found = 0
    sentence = sentence.lower()
    for word in mylist:
        if word in sentence:
            found += 1
        if found==2:
            return True
    return False

sentence1 = "Monkeys love bananas"
sentence2 = "The dog loves cats"
in_my_list(sentence1)
True
in_my_list(sentence2)
False